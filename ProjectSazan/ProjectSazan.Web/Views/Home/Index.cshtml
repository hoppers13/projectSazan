@{
    ViewData["Title"] = "Project Sazan";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>              
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/home1.jpg" alt="make your collection available online" class="img-responsive carousel-home" />
            <div class="carousel-caption" role="option">
                <p>
                    Keep track of your collection
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/home2.jpg" alt="ask a quote from an insurance" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Ask a quote from an insurance for the most valuable pieces - or every piece you want
                </p>
            </div>
        </div>        
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Project Sazan</h2>
        <p>Keep track of your collections</p>
        <p>Ask a quote from an insurance for the most valuable pieces - or every piece you want</p>        
    </div>
    <div class="col-md-6">
        <h4>&nbsp;</h4>
        <p id="take-a-tour" class="alert-info">
            You can register and you can start creating your own collections or,
            if you want just to have a quick tour and get a feeling for the site, you can login as:
            <br/>user: collector@somemail.com
            <br/>password: AllowMeIn!33
        </p>        
    </div>
</div>
