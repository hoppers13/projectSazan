@using ProjectSazan.Web.Models.PhilatelyViewModels
@model PhilatelicItemViewModel

<form asp-controller="philately" asp-action="addItem" method="post">
    <div class="row">
        <div class="col-md-1">
            <p class="warning">
                Not yet available! Working in it.
            </p>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
        <div class="col-md-11">
            <div class="row">
                <div class="col-sm-4">
                    Number: <input asp-for="Number" class="form-control" />
                </div>
                <div class="col-sm-8">
                    Description: <input asp-for="Description" class="form-control" />
                </div>
            </div>
        </div>        
    </div>        
</form>