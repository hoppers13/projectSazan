@using ProjectSazan.Domain
@using ProjectSazan.Domain.Philately
@using ProjectSazan.Web.Models.PhilatelyViewModels
@model PhilatelicItemViewModel

<form asp-controller="philately" asp-action="addItem" enctype="multipart/form-data" method="post">
    <input type="hidden" id="CollectionId" name="CollectionId" value="@Model.CollectionId" />
    <div class="row">
        <div class="col-md-11">
            <div class="row">
                <div class="col-md-5">
                    Catalogue
                    <select asp-for="Catalogue" class="form-control">
                        @foreach (var catalogue in Enum.GetNames(typeof(CataloguesInUse)))
                        {
                            <option value="@catalogue">@catalogue</option>
                        }
                    </select>
                </div>
                <div class="col-md-5">Area <input asp-for="Area" class="form-control"></div>
                <div class="col-md-2">Number <input asp-for="Number" class="form-control"></div>
            </div>
            <div class="row">
                <div class="col-sm-2">Year <input asp-for="Year" class="form-control" /></div>
                <div class="col-sm-10">Description <input asp-for="Description" class="form-control" /></div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    Condition
                    <select asp-for="Condition" class="form-control">
                        @foreach (var condition in Enum.GetNames(typeof(Conditions)))
                        {
                            <option value="@condition">@condition</option>
                        }
                    </select>
                </div>
                <div class="col-sm-4">
                    Acquired
                    <div class="form-group">
                        <div class='input-group date' id='AcquiredDatePicker'>
                            <input asp-for="Acquired" class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">Price <input asp-for="Price" class="form-control" /></div>
                <div class="col-sm-2">
                    Currency
                    <select asp-for="Currency" class="form-control">
                        @foreach (var currency in Enum.GetNames(typeof(Currency)))
                        {
                            <option value="@currency">@currency</option>
                        }
                    </select>
                </div>
            </div>    
            <div class="row">
                <div class="col-md-12">
                    upload: scans
                    <input type="file" multiple id="scans" name="scans" class="form-control" />
                </div>
            </div>
        </div>
        &nbsp;
        <div class="col-md-1">            
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>